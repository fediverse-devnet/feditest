    <table class="feditest summary">
       <thead>
            <tr>
                <th>Status</th>
                <th>Count</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>Passed</th>
{%- if summary.n_passed != 0 %}
                <td class="status passed">{{ summary.n_passed }}</td>
{%- else %}
                <td>0</td>
{%- endif %}
            </tr>
            <tr>
                <th>Failed (hard)</th>
{%- if summary.n_hard_failed != 0 %}
                <td class="status hard">{{ summary.n_hard_failed }}</td>
{%- else %}
                <td>0</td>
{%- endif %}
            </tr>
            <tr>
                <th>Failed (soft)</th>
{%- if summary.n_soft_failed != 0 %}
                <td class="status soft">{{ summary.n_soft_failed }}</td>
{%- else %}
                <td>0</td>
{%- endif %}
            </tr>
            <tr>
                <th>Degrade</th>
{%- if summary.n_degrade_failed != 0 %}
                <td class="status hard">{{ summary.n_degrade_failed }}</td>
{%- else %}
                <td>0</td>
{%- endif %}
            </tr>
            <tr>
                <th>Skipped</th>
{%- if summary.n_skipped != 0 %}
                <td class="status skip">{{ summary.n_skipped }}</td>
{%- else %}
                <td>0</td>
{%- endif %}
            </tr>
            <tr>
                <th>Errors</th>
{%- if summary.n_errored != 0 %}
                <td class="status error">{{ summary.n_errored }}</td>
{%- else %}
                <td>0</td>
{%- endif %}
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <th>Total</th>
                <td>{{ summary.n_total }}</td>
            </tr>
        </tfoot>
    </table>
